doctype html
html
  head
    title Rahul Shah
    include includes/icon.pug
    link(rel="stylesheet", type="text/css", href="css/portfolio.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
  body
    include includes/navbar.pug
    figure.text-center
      blockquote.blockquote
        // make the line below into a content injection
        p.h1
          if h1_text
            = h1_text
          else
            | Hi, I am Rahul. 
    block layout-content
    div.container
      h4.text-center Contact Form
      .mb-3
          label.form-label(for="exampleFormControlInput1") From
          input.form-control(type="email" id="exampleFormControlInput1" placeholder="name@example.com")
      .mb-3
          label.form-label(for="exampleFormControlInput2") Subject
          input.form-control(type="email" id="exampleFormControlInput2" placeholder="")
      .mb-3
          label.form-label(for="exampleFormControlTextarea1") Message
          textarea.form-control(id="exampleFormControlTextarea1" rows="3")
      .mb3
          button.btn.btn-primary.mb-3(type="submit") Send
    include includes/footer.pug
